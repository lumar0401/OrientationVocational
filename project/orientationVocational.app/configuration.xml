<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/mylogfile.log</file>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L - %m%n</pattern>
        </encoder>
    </appender>
    <root level="ERROR">
        <appender-ref ref="FILE" />
    </root>
</configuration>